h1 Welcome to The Pixel Culture
.row 
  .col.l8  
    .row
        for post, slug in public.posts._data
          .col.l12
            .card
              .card-image
                img(src="#{post.img}")
                span.card-title #{post.title}
              .card-content.grey-text.text-darken-4
                != partial("posts/" + slug)  
                br
                for tag in post.tags
                  .chip
                    a(href="tags/#{tag}") #{tag}
                    
                    
  .col.l4
  
